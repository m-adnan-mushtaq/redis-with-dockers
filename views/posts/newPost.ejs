<%- include('../partials/header') %> 

<h2 class="text-center text-info">Create New Post</h2>
<form action="/posts/new" method="post" class="form-control w-75-md mx-auto my-3 p-2">
    <div class="input-box my-2">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%=post.title%>" class="form-control">
    </div>
    <div class="input-box my-2">
        <label for="title">Content</label>
        <textarea name="content" id="content"  rows="5" class="form-control"><%=post.content%></textarea>
    </div>
    <div class="input-box my-2">
        <label for="author">Author</label>
        <select name="author" id="author" class="form-control">
            <% authors.forEach(author=>{%>
                <option value="<%=author._id%>"><%=author.name%></option>
            <%})%>
        </select>
    </div>

    <button class="btn btn-warning btn-lg my-2">Create</button>

</form>



<%- include('../partials/footer') %> 
